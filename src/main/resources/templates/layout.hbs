<!DOCTYPE html>
<html>
<head>
    <title>{{#block "title"}}Heroes{{/block}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/heroes/new">Add A Hero</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Squads
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                {{#if squads}}
                    {{#each squads}}
                         <li><a class="dropdown-item" href="/squads/{{id}}">{{name}}</a></li>
                    {{/each}}
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/squads/new">Add a Squad</a></li>
                {{else}}
                    <li><a class="dropdown-item" href="/squads/new">Add a Squad</a></li>
                {{/if}}
            </ul>
        </li>
    </ul>
</div>
</nav>
<div class="container-fluid">
    <!--begin main template-->
    <div class="col-md-12">
        {{#block "content"}}
        {{/block}}

    </div>
</div>
<!--end main template-->
{{#block "footer"}}
    <footer class="footer">
        <div class="container-fluid">
            <hr>
            <p class="text-muted">
                <a href="/squads/delete">Delete all Squads & Heroes</a><br>
                <a href="/heroes/delete">Delete all Heroes</a>
            </p>
        </div>
    </footer>
</body>
</html>
{{/block}}
