{{>layout.hbs}}

{{#if editSquad}}
    <h1>Edit this squad!</h1>
    <form action="/squads/{{squad.id}}" method="post">
        <div class="mb-3">
        <label for="newSquadName" class="form-label">Edit this squad's name</label>
        <input placeholder="Squad Name" id="newSquadName" name="newSquadName" type="text" class="form-control" value="{{squad.name}}" required>
        </div>
        <div class="mb-3">
            <label for="newSquadCause" class="form-label">Edit this squad's cause</label>
            <input placeholder="Cause" id="newSquadCause" name="newSquadCause" type="text" class="form-control" value="{{squad.cause}}" required>
        </div>
        <div class="mb-3">
            <label for="newSquadSize" class="form-label">Edit this squad's size</label>
            <input placeholder="Squad Size" id="newSquadSize" name="newSquadSize" type="number" class="form-control" value="{{squad.maxsize}}" required>
        </div>
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

{{else}}
    <h1>Add a new Squad!</h1>
    <form action="/squads" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Squad name</label>
            <input placeholder="Squad Name" id="name" name="name" type="text" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="cause" class="form-label">Squad cause</label>
            <input placeholder="Cause" id="cause" name="cause" type="text" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="size" class="form-label">Squad size</label>
            <input placeholder="Squad Size" id="size" name="size" type="number" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
{{/if}}