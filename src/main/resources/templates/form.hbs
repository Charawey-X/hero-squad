{{#partial "header" }}
    <link rel="stylesheet" href="/css/heroes.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{{/partial}}


{{#partial "content"}}
    <form action="/heroes/new" method="post">
        <h1>ADD A NEW HERO!</h1>
        <div class="form-section">
        <div class="mb-3">
            <label for="name" class="form-label">Hero Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" class="form-control" id="age" name="age" required>
        </div>
        <div class="mb-3">
            <label for="superpower" class="form-label">Super Power</label>
            <input type="text" class="form-control" id="superpower" name="superpower" required>
        </div>
        <div class="mb-3">
            <label for="weakness" class="form-label">Weakness</label>
            <input type="text" class="form-control" id="weakness" name="weakness" required>
        </div>
        </div>
        <button type="submit" class="button bottom" style="color:orangered;">SUBMIT</button>
    </form>

    <!--form.hbs.-->
{{/partial}}

{{> layout.hbs}}